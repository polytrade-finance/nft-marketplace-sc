{
  "name": "nft-marketplace-sc",
  "version": "1.0.0",
  "description": "Smart Contracts for NFT Marketplace",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "lint": "eslint . --ext .js",
    "lint:js-fix": "eslint . --ext .js --fix",
    "lint:sol": "npx prettier '**/*.{json,sol,md}' --check && npx solhint 'contracts/**/*.sol'",
    "lint:sol-fix": "npx prettier '**/*.{json,sol,md}' --write && npx solhint 'contracts/**/*.sol' --fix",
    "lint:fix": "npm run lint:js-fix && npm run lint:sol-fix",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polytrade-finance/nft-marketplace-sc.git"
  },
  "keywords": [],
